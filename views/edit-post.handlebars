<article>
   <a class="btn btn-outline-info m-2" href="/dashboard">&larr; Back to dashboard</a>
   <div class="card">
   <h2 class="card-header">Edit Post</h2>
   <form class="edit-post-form card-body">
      <div class="form-group col-6">
         <input class="form-control" name="post-title" type="text" value="{{post.title}}" />
         <span class="text-muted">({{format_url post.post_url}})</span>
      </div>
      <div class="form-group col-6">
         {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
         |
         <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
      </div>
      <button type="submit" class="btn btn-outline-success">Save post</button>
      <button type="button" class="delete-post-btn btn-outline-danger btn">Delete post</button>
   </form>
</article>

<form class="comment-form card-body">
   <div class="form-group col-6">
      <textarea class="form-control" name="comment-body" rows="3" placeholder="Whats on your mind?"></textarea>
   </div>

   <div>
      <button type="submit" class="btn btn-outline-success">add comment</button>
   </div>
</form>
</div>
{{> comments post.comments }}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>