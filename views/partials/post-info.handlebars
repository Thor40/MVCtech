    <article class="post card-body col-6">
      <div class="title">
        <h2 class="card-title">{{title}}</h2>
        <p class="card-subtitle text-muted">{{post_url}}</p>
      </div>
      <div class="meta card-body">
        {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
      </div>
    </article>